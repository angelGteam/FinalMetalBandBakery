
@{
    ViewBag.Title = "vending";
}
<h3>@ViewBag.Message</h3>
<h2>vending</h2>
<table class="table table-dark table-striped">
    <thead class=thead-dark>
        <tr>
            <th scope="col">ItemId</th>
            <th scope="col">Price</th>
            <th scope="col">Name</th>
            <th scope="col">Add to cart</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model) {
            <tr>
                <th>@item.ItemId</th>
                <th>@item.Price</th>
                <th>@item.Name</th>
                <th>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                    </select>
                </th>
            </tr>
        }
    </tbody>
</table>
<a href='@Url.Action("AddToCart", "Home")'>
    <input type="button" value="Add to cart">
</a>